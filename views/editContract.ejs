<div class="main-container">


    <h3>Edit Contract</h3>

    
    <form action="/contract" method="POST"  class="main-form needs-validation" novalidate>
        <% regErrors.forEach(function(message){%>
            <div class="alert alert-danger small"><%= message%></div>
        <%}) %>
       

        
        <div class="row">
           
                <div class="form-group">
                    <label for="Contract No">Contract No.</label>
                    <input type="text" value="<%=contract.contractNo %>" name="contractNo" id="contractNo" class="form-control">
                </div>

                <div class="form-group">
                    <label for="Full Name">Full Name</label>
                    <select id="tenantName" name="tenantName" class="form-control">
                       
                        <option value="<%= contract.fullnameId.fullnameid %>"><%=contract.fullnameId.fullname  %> </option>
                        
                    </select>
                </div>
                
            <div class="form-group">
                <label for="CStart Date"> Start Date</label>
                <input type="Date"  value="<%=contract.startDate %>"   name="startDate" id="startDate" class="form-control" required>
            <!-- <div class="invalid-feedback">Please enter a valid username.</div> -->
            </div>

            <div class="form-group">
                <label for="CEnd Date">End Date</label>
                <input type="Date" value="<%=contract.endDate %>" name="endDate" id="endDate" class="form-control" required>
            <!-- <div class="invalid-feedback">Please enter a valid username.</div> -->
            </div>
            <div class="form-group">
                <label for="Room Number">Room Number</label>
                 <select name="roomno" id="roomno"  class="form-control" >
                    <option value="<%= contract.roomnoId.id %>"><%= contract.roomnoId.roomno %> </option>
                    
                 </select>
            </div>
            
            <div class="form-group">
                <label for="Contract Date">Contract Date</label>
                <input type="Date" value="<%=contract.date %>" name="date" id="date" class="form-control">
            </div>
            <div class="form-group">
                <label for="Price">Price</label>
                <input type="Number"  value="<%=contract.price %>"name="price" id="price" class="form-control">
            </div>
            <div class="form-group">
                <label for="Advance">Advance</label>
                <input type="Number" value="<%=contract.advance %>" name="advance" id="advance" class="form-control">
            </div>
    </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    
    </form>

